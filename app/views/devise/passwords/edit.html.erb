<div class="container">
  <div id="passwordreset" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Create New Password</div>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <%#= devise_error_messages! %>
        <div class="form-group col-md-12 col-sm-12">
          <label for="email" class="control-label col-sm-3 col-md-3">New password</label>
          <div class="col-sm-9 col-md-9">
            <%= f.password_field :password, autofocus: true, autocomplete: "off", id: "paw", class: "form-control", placeholder: "create your new password" %>
          </div>
        </div>
      
         <div class="form-group col-md-12 col-sm-12">
          <label for="email" class="control-label col-sm-3 col-md-3">Confirm password</label>
          <div class="col-sm-9 col-md-9">
            <%= f.password_field :password_confirmation, autocomplete: "off",id: "pawc", class: "form-control", placeholder: "confirm your new password" %>
          </div>
        </div>
        <div class="form-group">
          <!-- Button -->                                 
          <div class="  col-sm-offset-3 col-sm-9">
            <%= f.submit "Submit",id:"btn-signup", class:"btn btn-success", disabled: true %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
 $(document).ready(function() {
 $("#pawc").on('focusout',function(){
 if ($("#paw").val() == $("#pawc").val())
 {
  alert("Password Matched Successfully");
  $('[type="submit"]').prop('disabled', false);
 }
 else
 {
  alert("Password not matched");
  $('[type="submit"]').prop('disabled', true);
 }
  });
 });
 </script>