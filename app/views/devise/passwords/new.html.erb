
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center form_text">
      <center><h3>Forgot your password?</h3> </center>
      <hr>
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <%#= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email id" %>
			  </div>

			  <div class="actions"><br/>
			    <%= f.submit "Send me reset password instructions", class: "btn btn-danger btn-md" %>
			  </div>
			  <div class="col-md-12"><br>
			  	<%= link_to "Register",new_user_registration_path, class: "btn btn-primary btn-md btn-160"%>
          <%= link_to "Login",new_user_session_path, class: "btn btn-primary btn-md btn-160"%>
			  </div><br><br><br>
			<% end %>
	<%#= render "devise/shared/links" %>
		</div>
	</div>
</div>